<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weatherBackground">
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="@color/cardView"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="50dp"
                    android:src="@drawable/thigh">

                </ImageView>

                <TextView
                    android:id="@+id/txt_tempHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21'C"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp">

                </TextView>

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="50dp"
                    android:src="@drawable/tlow">

                </ImageView>

                <TextView
                    android:id="@+id/txt_tempLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14'C"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp">

                </TextView>

            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="50dp"
                    android:src="@drawable/date">

                </ImageView>

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022/08/21 11:47:45"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/text_weather"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </TextView>

    <ListView
        android:id="@+id/weather_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>